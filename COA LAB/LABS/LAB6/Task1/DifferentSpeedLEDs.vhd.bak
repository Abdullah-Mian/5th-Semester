	library ieee;
	use ieee.std_logic_1164.all;
	use ieee.numeric_std.all; -- Added for arithmetic operations

	entity DifferentSpeedLEDs is
		 port (
			  clk  : in  std_logic;
			  sclk : out std_logic;
			  opcode : in std_logic_vector(2 downto 0)
		 );
	end DifferentSpeedLEDs;

	architecture behv of DifferentSpeedLEDs is
		 signal count: unsigned(31 downto 0) := (others => '0'); -- Changed to unsigned type
	begin
		 process (clk)
		 begin
			  if (clk'event and clk = '1') then
					count <= count + 1; -- Corrected addition for unsigned type
			  end if;
		 end process;
		 
		 sclk <= count(20) when opcode = '000' else sclk <= count(31) when opcode = '100'else sclk <= count(15) when opcode = '010' 
		 else sclk <= count(2) when opcode = '001' ; 
	end behv;
